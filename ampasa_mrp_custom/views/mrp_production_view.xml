<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ampasa_mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">ampasa.mrp.production.form.view.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="performance"></field>                
            </xpath>
        </field>
    </record>

    <record id="ampasa_mrp_production_tree_view_inherit" model="ir.ui.view">
        <field name="name">ampasa.mrp.production.tree.view.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_qty']" position="after">
                <field name="performance"></field>                
            </xpath>
        </field>
    </record>

</odoo>
