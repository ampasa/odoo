<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_report_paperformat" model="report.paperformat">
        <field name="name">HR Employee Report Paperformat</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">279</field>
        <field name="page_width">216</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">20</field>
        <field name="margin_right">20</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">10</field>
        <field name="dpi">90</field>
    </record>

    <record id="hr_employee_report_contrato_empleado" model="ir.actions.report">
        <field name="name">Contrato empleado</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ampasa_reportes.report_contrato_empleado</field>
        <field name="report_file">ampasa_reportes.report_contrato_empleado</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="ampasa_reportes.hr_employee_report_paperformat"/>

    </record>

    <template id="report_contrato_empleado">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <div class="page">
                    <div class="oe_structure" style="text-align: justify;">
                    <div class="container">
                        <!-- Contenido del informe -->

                    </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>